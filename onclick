    <button>btn2</button>
    <button>btn3</button>
    <script type="text/javascript">
    // var i = 0;
    var btns = document.getElementsByTagName('button');
    console.log(btns);
    for (let i = 0; i < btns.length; i++) {
        console.log(i);
        btns[i].onclick = function() {
            alert(i);
            console.log(i);
        };
    }
    </script>
